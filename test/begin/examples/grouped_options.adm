sheet grouped_options
{
  interface:
	a : true;
	b : true;
	c : true;
	all;
	
  constant:
  	true_ : [true, true, true];
  	false_ : [false, false, false];

  logic:

	relate {
		all <== [a, b, c] == true_ ? true : [a, b, c] == false_ ? false : empty;
		a, b, c <== [all, all, all];
	}

 output:
    result <== { a: a, b: b, c: c };
}
